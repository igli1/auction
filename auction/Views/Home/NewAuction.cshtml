@model auction.Models.ViewModels.CreateAuctionViewModel
@{
    ViewData["Title"] = "New Auction";
}

<div class="container">
    <h2>Create Auction</h2>
    <form asp-action="NewAuction" method="post" enctype="multipart/form-data">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="row mt-3">
                    <div class="form-group col-md-6">
                        <label asp-for="ProductName">Product Name:</label>
                        <input asp-for="ProductName" class="form-control"/>
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="StartingBid">Starting Bid:</label>
                        <input asp-for="StartingBid" class="form-control" type="number" step="0.01"/>
                        <span asp-validation-for="StartingBid" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group col-md-6">
                        <label asp-for="Description">Description:</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="EndDate">End Date:</label>
                        <input asp-for="EndDate" class="form-control" type="date" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")"/>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                        <div class="form-group">
                            <label asp-for="Image">Upload Image</label>
                            <input type="file" class="form-control" asp-for="Image" />
                        </div>
                </div>
                <br/>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create Auction</button>
                </div>
            </div>
        </div>
    </form>
</div>