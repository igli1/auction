@model auction.Models.ViewModels.ProductDetailsViewModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="mb-0">@Model?.ProductName</h3>
                </div>
                <div class="col-md-6">
                    <p class="mb-0">Created by: @Model?.ProductOwner</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <p>Time Remaining: @Model?.DaysRemaining days</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 offset-md-3">
            <p>@Model?.Description</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <p>Current Highest Bid:</p>
        </div>
        <div class="col-md-6 text-right">
            <p>Bidder: @Model?.BidderName</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>Bid Amount: @Model?.HighestBid</p>
        </div>
    </div>
</div>